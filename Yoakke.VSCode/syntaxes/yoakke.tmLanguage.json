{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Yoakke",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#builtin_types" },
		{ "include": "#strings" },
		{ "include": "#line_comment" },
		{ "include": "#nested_comment" }
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.yoakke",
				"match": "\\b(const)\\b"
			}]
		},
		"builtin_types": {
			"patterns": [{
				"name": "storage.type.yoakke",
				"match": "\\b(proc|type|i32)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.yoakke",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.yoakke",
					"match": "\\\\."
				}
			]
		},
		"line_comment": {
			"name": "comment.line.double-slash.yoakke",
			"begin": "//",
      		"end": "$"
		},
		"nested_comment": {
			"name": "comment.block.yoakke",
			"begin": "/\\*",
			"end": "\\*/",
			"patterns": [
				{ "include": "#nested_comment" }
			]
		  }
	},
	"scopeName": "source.yoakke"
}