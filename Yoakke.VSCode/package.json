{
    "name": "yk-vscode",
    "displayName": "yk-vscode",
    "description": "Language support for the Yoakke programming language",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.53.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
		"onLanguage:yoakke"
	],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "yoakke",
                "aliases": [
                    "Yoakke",
                    "yoakke"
                ],
                "extensions": [
                    ".yk"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "yoakke",
                "scopeName": "source.yoakke",
                "path": "./syntaxes/yoakke.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "yoakke",
                "path": "./snippets/basic.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "yoakkeLanguageServer.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.53.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.30.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0",
        "vscode-languageclient": "^7.0.0"
    }
}
